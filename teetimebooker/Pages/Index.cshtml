@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="container mt-4">
    <h2>Select a Tee Time</h2>
    <div>
        <label for="datePicker">Choose a date:</label>
        <input type="date" id="datePicker" class="form-control" onchange="loadTeeTimes()">
    </div>
    <ul id="teeTimesList" class="mt-3">
        <!-- Tee times will be dynamically added here -->
    </ul>
</div>

<script>
    function loadTeeTimes() {
        const date = document.getElementById('datePicker').value;
        if (!date) return;

        const teeTimesList = document.getElementById('teeTimesList');
        teeTimesList.innerHTML = '';

        const startTime = new Date(`${date}T08:00:00`);
        for (let i = 0; i < 10; i++) {
            const time = new Date(startTime.getTime() + i * 20 * 60000);
            const listItem = document.createElement('li');
            listItem.textContent = time.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
            teeTimesList.appendChild(listItem);
        }
    }
</script>
